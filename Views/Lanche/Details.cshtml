@model Lanche

<div class="p-2">
    <div class="card">
        <img src="@Model.ImagemUrl" class="rounded mx-auto d-block" alt="Imagem do lanche" />
        <div class="card-body">
            <h5 class="card-title">@Model.Nome</h5>
            <p class="card-text">@Model.DescricaoDetalhada</p>

            <div class="text-end m-4">
                <a class="btn btn-warning m-3" asp-controller="Lanche" asp-action="List">Ver Lanches</a>
                <a class="btn btn-success" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@Model.LancheId">
                    Adicionar @Model.Nome no carrinho
                </a>
            </div>
        </div>
    </div>
</div>
