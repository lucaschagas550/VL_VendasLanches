@model Lanche

<div class="col">
    <div class="card">
        <div class="text-center">
            <a asp-controller="Lanche" asp-action="Details" asp-route-LancheId="@Model.LancheId"> 
                <img src="@Model.ImagemUrl" class="img-fluid"alt="Lanche a venda" > 
            </a>
        </div>
        <div class="card-body">
            <a asp-controller="Lanche" asp-action="Details" asp-route-lancheid="@Model.LancheId">
                <h5 class="card-title">@Model.Nome</h5>
            </a>
            <p class="card-text">@Model.DescricaoCurta</p>
            <p class="card-text">@Model.Preco.ToString("c")</p>
            <a class="btn btn-primary btn-sm" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra"
               asp-route-LancheId="@Model.LancheId">Adicionar ao Carrinho</a>
        </div>
    </div>
</div>